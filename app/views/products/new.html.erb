<h1>New product</h1>

<%= render "form", product: @product %>

<br>
<%= form_with(model: @product, url: fetch_product_price_products_path, method: :post) do |form| %>
  <div class="field">
    <%= form.label :entity_id %>
    <%= form.number_field :entity_id, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Fetch Product Data', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= form_tag(fetch_product_price_products_path, method: :post) do %>
  <label for="entity_id">Entity ID:</label>
  <%= text_field_tag(:entity_id, nil, required: true) %>
  <%= submit_tag('Fetch Price') %>
<% end %>


<div>
  <%= link_to "Back to products", products_path %>
</div>




